<div>
  <h2>
    <%= link_to("/products/", class: "nav-links back") do %>
      <%= image_tag("http://www.primalcom.com/images/Icon-arrow-right.png") %>
    <% end %>
  </h2>
  <h2>
    <%= link_to("/", class: "nav-links home") do %>
      <%= image_tag("http://www.bestpeer.com/img/home.png") %>
    <% end %>
  </h2>
</div>

<div>

  <% categories.each do |cats| %>

    <div class="index_transbox">

      <%= link_to("/categories/#{cats.id}") do %>
        <%= image_tag(cats.cat_url) %>
      <% end %>

      <h3 class="item">
        <%= link_to cats.title, "/categories/#{cats.id}" %>
      </h3>

    </div>

  <% end %>

</div>
