  <body>

    <% products.each do |product| %>

      <div class="index_transbox">

          <a href="/products/<%= product.id %>">
            <% if Product.select(:name).where("name LIKE '%bag%'")%>
              <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/Hermes_Ostrich_Birkin_Bag.jpg"/></a>

            <% elsif Product.select(:name).where("name LIKE '%knife%'")%>
              <img src="http://www.sabatier-shop.com/client/gfx/photos/produit/244.jpg"/></a>
            <%end%>


      <h3><a href="/products/<%= product.id %>"> <%= product.name %></a></h3>

      <p><%= "Quality: #{product.condition}" %></p>

      <p><%= "$#{product.discount}" %>
        <% if product.on_clearance %>
          <%= " - Clearance: 10% off! (Original price = $#{(product.price / 0.9).round})" if product.condition.downcase == 'fair' %>
          <%= " - Clearance: 20% off! (Original price = $#{(product.price / 0.8).round})" if product.condition.downcase == 'good' %>
        <% end %></p>

      <p><%= "#{product.quantity} items left in stock!" %></p>

    </div>

  </body>

<% end %>
